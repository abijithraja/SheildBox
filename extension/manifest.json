{
  "manifest_version": 3,
  "name": "Shield Box",
  "version": "1.0",
  "description": "AI-powered phishing alert system with IoT integration",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ]
  
}
