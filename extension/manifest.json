{
  "manifest_version": 3,
  "name": "Shield Box",
  "version": "1.0",
  "description": "AI-powered phishing email and link scanner with IoT alerts.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "http://<ESP32_IP>/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
