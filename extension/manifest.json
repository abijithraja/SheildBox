{
  "manifest_version": 3,
  "name": "Shield Box Floating Panel",
  "version": "1.0",
  "description": "Scan URLs for phishing threats using AI",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_title": "Shield Box"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "shieldPanel.js",
        "shieldPanel.css",
        "floatingpanel.html"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
