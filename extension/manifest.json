{
  "manifest_version": 3,
  "name": "Shield Box - Anti-Phishing Extension",
  "version": "1.0",
  "description": "Detect phishing emails and suspicious links. Alerts user and IoT device.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "floatingpanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content-script.js"]
    }
  ]
}
